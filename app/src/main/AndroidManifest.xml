<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myfragment">

    <application
        android:allowBackup="true"
        android:icon="@drawable/bookicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".OthersActivity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
        </activity>
        <activity android:name=".OthersActivity.RegisterActivity"/>
        <activity android:name=".OthersActivity.LoginActivity"/>
        <activity android:name=".ActivitiesInMineLayout.PersonalInformationActivity"/>
        <activity android:name=".ActivitiesInMineLayout.MyFavoriteActivity"/>
        <activity android:name=".ActivitiesInMineLayout.MySubmitActivity"/>
        <activity android:name=".ActivitiesInMineLayout.AdviceDialog"/>
        <activity android:name=".ActivitiesInMineLayout.AboutActivity"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
</manifest>